[user]
    name = Ethan Wu
    email = ethanwu@cs.ucsb.edu
[color]
    ui = auto
[core]
    pager = less -FMRiX
    editor = nvim
    excludesfile = ~/.config/git/excludes
    # do not honor executable bit changes
    filemode = false
[pull]
    rebase = false
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
    features = line-numbers
    # syntax-theme = base16-catalina
    syntax-theme = ansi
    # emulate the catalina theme since current version of `delta` is
    # incompatible with current version of `bat` theme caches
    file-style = yellow bold
    inline-hint-style = brightmagenta
    hunk-header-decoration-style = brightmagenta box
    hunk-header-line-number-style = brightmagenta italic
    zero-style = syntax dim
    plus-style = green
    plus-non-emph-style = dim syntax
    plus-emph-style = green
    minus-style = red
    minus-non-emph-style = dim syntax
    minus-emph-style = red
    line-numbers-plus-style = green
    line-numbers-minus-style = red

[init]
	defaultBranch = main
